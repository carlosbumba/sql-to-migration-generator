<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="./vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
>
    <testsuites>
        <testsuite name="SQLReader Extractors">
            <directory suffix="Test.php">./tests/Reader</directory>
        </testsuite>
        <testsuite name="DBMS Tests">
            <directory suffix="Test.php">./tests/DBMS</directory>
        </testsuite>
        <testsuite name="Migration Writer Tests">
            <directory suffix="Test.php">./tests/Writer</directory>
        </testsuite>
    </testsuites>
</phpunit>
